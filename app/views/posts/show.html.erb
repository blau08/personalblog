<h1><%= @post.author %></h1>
<p><%= @post.content %></p>

<% if @post.comments.any? %>
  <h4>Here are the comments for this post:</h4>

  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <%= comment.user %> <p> says <%= comment.comment %></p>|
        <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
        <%= link_to "Delete", post_comment_path(@post, comment),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no comments yet!</p>
<% end %>

<p><%= link_to "Add a comment", new_post_comment_path(@post) %></p>
<p><%= link_to "Delete post", post_path(@post), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
<p><%= link_to "Return to posts", posts_path %></p>
